using System;

class Program
{
    static void Main()
    {
        Console.Write("Input the string: ");
        string inputString = Console.ReadLine();

        Console.Write("The characters of the string in reverse are: ");
        for (int i = inputString.Length - 1; i >= 0; i--)
        {
            Console.Write(inputString[i]);
        }
    }
}
